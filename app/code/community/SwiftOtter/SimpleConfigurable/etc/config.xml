            <!--</SwiftOtter_SimpleConfigurable>-->
            <!--</observers>-->
            <!--</sales_order_item_collection_load_after>-->
        </events>
        <sales>
            <order>
                <create>
                    <available_product_types>
                        <simpleconfigurable/>
                    </available_product_types>
                </create>
            </order>
        </sales>
    </adminhtml>


</config>